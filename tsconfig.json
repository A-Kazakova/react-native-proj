{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@api/*": ["api/*"],
      "@models/*": ["models/*"],
      "@screens/*": ["screens/*"],
      "@components/*": ["components/*"],
      "@store/*": ["store/*"],
      "@navigation/*": ["navigation/*"],
      "@constants/*": ["constants/*"],
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
  ]
}
